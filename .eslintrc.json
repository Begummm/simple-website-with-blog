{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env":{
    "node": true
  },
  "extends": "eslint:all",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": "off",
    "max-len": ["error", 100],
    "no-magic-numbers": "off",
    "no-process-env": "off",
    "object-curly-newline": ["error", "always"],
    "one-var": ["error", "never"],
    "padded-blocks": ["error", "never"]
  }
}
